{% extends 'admin/layout.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <h2>Liste des utilisateurs</h2>

      <p class="btn-new"><a href="{{ path('user_new') }}">Nouvel utilisateur</a></p>

    <table class="table">
        <thead>
            <tr>
                <th class="list-user">Email</th>
                <th class="list-user">Nom</th>
                <th class="list-user">Prénon</th>
                <th class="list-user">Numéro de téléphone</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr class="user-info">
                <td class="user-detail">{{ user.email }}</td>
                <td>{{ user.lastname }}</td>
                <td>{{ user.firstname }}</td>
                <td>{{ user.phonenumber }}</td>
            
                <td>
                <div class="btn-user">
                    <p class="btn-list-user"><a href="{{ path('user_show', {'id': user.id}) }}">Voir</a></p>
                    <p class="btn-list-user"><a href="{{ path('user_edit', {'id': user.id}) }}">Modifier</a></p>
                </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

   
{% endblock %}
