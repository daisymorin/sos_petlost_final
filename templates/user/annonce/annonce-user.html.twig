{% extends 'front/layout.html.twig' %}

{% block title %}SOS PETLOST{% endblock %}

{% block content %}

<h2>Mes annonces</h2>

 <p class="btn-new"><a href="{{ path('new_annonce') }}">Publier une annonce</a></p>
 
 <div class="container">

    {% for animal in animals %}

    <div class="animals">

        {% if animal.missing %}
            <p class="info">{{ animal.missing ? 'Disparus' : '' }} : {{ animal.name }}</p>
        {% else %}
             <p class="info">{{ animal.found ? 'Trouv√©' : '' }} : {{ animal.name }}</p>
        {% endif %}

        <p class="info-img"><img class="imgAnimal" src="{{ vich_uploader_asset(animal.image, 'file') }}" alt="{{ animal.name }}" /></p>        
        <p class="info">{{ animal.city }} ({{ animal.postcode }})</p>

        <div class="date-annonce">
    
            <p class="date">{{ animal.date ? animal.date|date('d/m/Y') : '' }}</p>
            <p class="annonce-show"><a href="{{ path('show-annonce', {'id': animal.id}) }}">Voir</a></p>
            <p class="annonce-update"><a href="{{ path('edit-annonce', {'id': animal.id}) }}">Modifier</a></p>
        </div>

    </div>

    {% endfor %}

</div>

{% endblock %}
